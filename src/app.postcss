@import url('https://rsms.me/inter/inter.css');

html {
	font-family: 'Inter', -apple-system, BlinkMacSystemFont, Helvetica Neue, sans-serif;
}

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	*,
	*:after,
	*:before {
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	html {
		font-size: 100%;
	}
}
